<div class="header">
	<div class="header-main">
		<div class="logo">
			<a href="#" class="logo-title">Ei'BOOK</a>
		</div>
		<div class="header-center">
			<ul class="header-menu-list">
				<li class="header-menu-list-item active"><a href="#"><i class="icon-globe"></i><span>首页</span></a></li>
				<li class="header-menu-list-item"><a href="#"><i class="icon-leaf"></i><span>关注</span></a></li>
				<li class="header-menu-list-item">
					<a href="#"><i class="icon-bell"></i><span>消息</span></a>
					<ul class="sec-header-menu">
						<li class="sec-header-menu-item">
							<a href="javascript:;"><i class="icon-comments-alt"></i>评论</a>
						</li>
						<li class="sec-header-menu-item">
							<a href="javascript:;"><i class="icon-envelope-alt"></i>Ei'B 信</a>
						</li>
						<li class="sec-header-menu-item">
							<a href="javascript:;"><i class="icon-exchange"></i>换书请求</a>
						</li>
						<li class="sec-header-menu-item">
							<a href="javascript:;"><i class="icon-bookmark-empty"></i>关注和收藏</a>
						</li>
						<li class="sec-header-menu-item">
							<a href="javascript:;"><i class="icon-upload-alt"></i>旧书上架</a>
						</li>
						<li class="sec-header-menu-item">
							<a href="javascript:;"><i class="icon-heart-empty"></i>赞和喜欢</a>
						</li>
						<li class="sec-header-menu-item">
							<a href="javascript:;"><i class="icon-volume-up"></i>其他信息</a>
						</li>
					</ul>
				</li>
			</ul>
			<div class="search-main">
				<input type="text" placeholder="搜索">
				<span class="search-btn"><i class="icon-search"></i></span>
			</div>
		</div>
		<div class="user"> <!-- was-signed -->
			<% if(data.login_status){ %>
				<div class="user-main">
					<a href="#" class="user-photo"><img src="/img/user/photo.png" alt=""></a>
					<% if(typeof data.user_id !== 'undefined'){ %>
					<ul class="sec-header-menu">
						<li class="sec-header-menu-item">
							<a href="/user/<%= data.user_id%>/center"><i class="icon-user"></i>我的主页</a>
						</li>
						<li class="sec-header-menu-item">
							<a href="/bookmarks"><i class="icon-bookmark"></i>我的收藏</a>
						</li>
						<li class="sec-header-menu-item">
							<a href="/user/<%= data.user_id%>/likes"><i class="icon-heart"></i>我喜欢的</a>
						</li>
						<li class="sec-header-menu-item">
							<a href="/user/<%= data.user_id%>/comments"><i class="icon-comments-alt"></i>我的评论</a>
						</li>
						<li class="sec-header-menu-item">
							<a href="/sign_out"><i class="icon-signout"></i>退出</a>
						</li>
					</ul>
					<% } %>
				</div> 
			<%} else {%>
				<div class="sign"><a class="signin" href="/login">登陆</a><a class="common-top-btn" href="#"><i class="icon-signin"></i>注册</a></div>
			<% } %>
			<div class="package">
				<a href="#" class="common-top-btn"><i class="icon-inbox"></i>我的书包</a>
			</div>
		</div>
	</div>
